<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <div class='col-lg-12'>
        <h1 style="text-align: center; margin-top: 20px;">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
          <form action="/campgrounds/<%= campground._id %>/comments" method='POST'>
            <!-- Use form group to group each input and form control to give a general style to each input -->
            <div class="form-group">
              <input class="form-control" type="text" name='comment[text]' placeholder='text'>
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
          </form>
          <a href='/campgrounds'>Go back to homepage</a>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>